{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "group":"build",
            "label": "Build g++ [RELEASE]",
            "type": "shell",
            "command": "g++",            
            "args": [
                "-m64",
                "-Wall",
                "-std=c++11",
                "-pthread",
                "-march=native",
                "src/Raycasting.cpp",
                "src/Diagnostics.cpp",
                "src/QuadraticSolver.cpp",
                "src/ANITA_EarthModel.cpp",        
                "-o",
                "bin/ANITA_EarthModel"

            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "group":"build",
            "label": "Build g++ [DEBUG]",
            "type": "shell",
            "command": "g++",
            "args": [
                
                "-m64",
                "-Wall",
                "-std=c++11",
                "-pthread",
                "-ggdb",
                "-g",
                "src/Raycasting.cpp",
                "src/Diagnostics.cpp",
                "src/QuadraticSolver.cpp",                
                "src/ANITA_EarthModel.cpp",                
                "-o",
                "bin/ANITA_EarthModel"        
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "group":"build",
            "label": "Build Legacy Earth Model",
            "type": "shell",
            "command": "gcc",            
            "args": [                
                "-Wall",
                "-O3",
                "legacy/anita_earthmodel2.c",
                "-o",
                "bin/anita_earthmodel2"

            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}